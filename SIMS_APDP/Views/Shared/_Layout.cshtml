<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] • SIMS</title>
    <link rel="icon" href="~/favicon.ico" />

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.2/mdb.min.css" rel="stylesheet">

    <style>
        :root {
            --primary: #00b894;
            --bg-gradient: linear-gradient(135deg, #00b894, #00cec9);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: var(--bg-gradient);
            min-height: 100vh;
            margin: 0;
        }

        .navbar-custom {
            background: rgba(0, 184, 148, 0.98) !important;
            backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(255,255,255,0.1);
            box-shadow: 0 4px 30px rgba(0,0,0,0.3);
        }

            .navbar-custom .navbar-brand, .navbar-custom .btn-back-home {
                font-weight: 700;
                font-size: 1.8rem;
                color: white !important;
                text-shadow: 0 2px 10px rgba(0,0,0,0.4);
                transition: all 0.3s;
            }

                .navbar-custom .navbar-brand:hover,
                .navbar-custom .btn-back-home:hover {
                    transform: scale(1.05);
                    color: #fff !important;
                }

        .btn-custom {
            border-radius: 50px;
            padding: 10px 28px;
            font-weight: 600;
        }

            .btn-custom:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 25px rgba(0,184,148,0.4);
            }
    </style>
</head>
<body>

    <!-- NAVBAR SIÊU THÔNG MINH – CÓ NÚT QUAY LẠI THEO ROLE -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom shadow-lg fixed-top">
        <div class="container-fluid">
            @{
                var homeUrl = "/";
                if (User.Identity.IsAuthenticated)
                {
                    var roleIdClaim = User.FindFirst("RoleId")?.Value;
                    if (int.TryParse(roleIdClaim, out int roleId))
                    {
                        homeUrl = roleId switch
                        {
                            1 => "/Admin",
                            2 => "/Teacher",
                            3 => "/Student",
                            _ => "/"
                        };
                    }
                }
            }
            <!-- Logo SIMS -->
            <a class="navbar-brand" href="@homeUrl">
                <i class="fas fa-home me-2"></i>SIMS
            </a>

            <!-- Phần bên phải: Tên người dùng + Đăng xuất -->
            <div class="ms-auto d-flex align-items-center gap-3">
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="text-white fw-medium">
                        <i class="fas fa-user-circle me-2"></i>@User.Identity.Name
                    </span>
                    <a href="/logout" class="btn btn-outline-light btn-custom">
                        <i class="fas fa-sign-out-alt me-1"></i>Đăng xuất
                    </a>
                }
                else
                {
                    <a href="/Login" class="btn btn-outline-light btn-custom">Đăng nhập</a>
                    <a href="/Register" class="btn btn-light text-dark btn-custom">Đăng ký</a>
                }
            </div>
        </div>
    </nav>

    <div style="padding-top: 100px; min-height: 100vh;">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.2/mdb.umd.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>