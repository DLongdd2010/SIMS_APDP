@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] • SIMS</title>
    <link rel="icon" href="~/favicon.ico" />

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.2/mdb.min.css" rel="stylesheet">

    <style>
        :root {
            --primary: #00b894;
            --bg-gradient: linear-gradient(135deg, #00b894, #00cec9);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: var(--bg-gradient);
            min-height: 100vh;
            margin: 0;
        }

        .navbar-custom {
            background: rgba(0, 184, 148, 0.98) !important;
            backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(255,255,255,0.1);
            box-shadow: 0 4px 30px rgba(0,0,0,0.3);
        }

            .navbar-custom .navbar-brand {
                font-weight: 700;
                font-size: 1.8rem;
                color: white !important;
                text-shadow: 0 2px 10px rgba(0,0,0,0.4);
                transition: all 0.3s;
            }

                .navbar-custom .navbar-brand:hover {
                    transform: scale(1.05);
                }

        .btn-custom {
            border-radius: 50px;
            padding: 10px 28px;
            font-weight: 600;
        }

            .btn-custom:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 25px rgba(0,184,148,0.4);
            }

        /* Avatar tròn đẹp */
        .avatar-rounded {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: rgba(255,255,255,0.25);
            display: flex;
            align-items: center;
            justify-content: center;
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255,255,255,0.4);
            font-size: 1.2rem;
            color: white;
        }

        /* Dropdown menu đẹp */
        .dropdown-menu {
            border: none;
            border-radius: 12px;
            overflow: hidden;
            min-width: 280px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }

        .dropdown-item {
            padding: 10px 16px;
            border-radius: 8px;
            margin: 4px 8px;
            transition: all 0.25s ease;
        }

            .dropdown-item:hover {
                background: var(--primary);
                color: white !important;
                transform: translateX(6px);
            }

            .dropdown-item.active {
                background: #00b894;
                color: white;
                font-weight: 600;
            }

            .dropdown-item.text-danger:hover {
                background: #dc3545 !important;
                color: white !important;
            }

        .dropdown-header-profile {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 12px 12px 0 0 !important;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom shadow-lg fixed-top">
        <div class="container-fluid">
            @{
                var homeUrl = "/";
                if (User.Identity.IsAuthenticated)
                {
                    var roleIdClaim = User.FindFirst("RoleId")?.Value;
                    if (int.TryParse(roleIdClaim, out int roleId)) ;
                    homeUrl = roleId switch
                    {
                        1 => "/Admin",
                        2 => "/Teacher",
                        3 => "/Student",
                        _ => "/"
                    };
                }
            }

            <a class="navbar-brand" href="@homeUrl">
                <i class="fas fa-home me-2"></i>SIMS
            </a>

            <div class="ms-auto d-flex align-items-center gap-3">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="dropdown">
                        <button class="btn btn-outline-light btn-custom dropdown-toggle d-flex align-items-center gap-3 py-2 px-3 rounded-pill shadow-sm"
                                type="button"
                                id="userDropdown"
                                data-bs-toggle="dropdown"
                                data-bs-auto-close="outside"
                                aria-expanded="false">
                            <div class="avatar-rounded">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="text-start text-white text-truncate" style="max-width: 150px;">
                                <div class="fw-bold small">@User.Identity.Name</div>
                                <div class="small opacity-75">
                                    @(User.FindFirst("RoleName")?.Value ?? "Member")
                                </div>
                            </div>
                        </button>

                        <!-- ĐỔI dropdown-menu-end → dropdown-menu-start + thêm position để không bị cắt -->
                        <ul class="dropdown-menu dropdown-menu-start mt-2 shadow-lg border-0"
                            style="min-width: 300px; right: 0; left: auto;"
                            aria-labelledby="userDropdown">

                            <!-- Header đẹp -->
                            <li class="px-4 py-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                                <div class="d-flex align-items-center text-white">
                                    <div class="avatar-rounded me-3" style="width:56px;height:56px;font-size:1.6rem;">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div class="text-truncate">
                                        <h6 class="mb-0 fw-bold">@User.Identity.Name</h6>
                                        <small class="opacity-90">@User.FindFirst(ClaimTypes.Email)?.Value</small>
                                    </div>
                                </div>
                            </li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-3 py-2 px-3 @(Context.Request.Path == "/Account/Profile" ? "active" : "")"
                                   href="/Account/Profile">
                                    <i class="fas fa-id-card text-primary"></i>
                                    <span>Profile Info</span>
                                    <i class="fas fa-chevron-right ms-auto small opacity-50"></i>
                                </a>
                            </li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-3 py-2 px-3 @(Context.Request.Path == "/Account/ChangePassword" ? "active" : "")"
                                   href="/Account/ChangePassword">
                                    <i class="fas fa-key text-warning"></i>
                                    <span>Change Password</span>
                                    <i class="fas fa-chevron-right ms-auto small opacity-50"></i>
                                </a>
                            </li>

                            <li><hr class="dropdown-divider my-2"></li>

                            <li>
                                <a class="dropdown-item text-danger d-flex align-items-center gap-3 py-2 px-3" href="/Login/Logout">
                                    <i class="fas fa-sign-out-alt"></i>
                                    <span>Logout</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a href="/Login" class="btn btn-outline-light btn-custom">Login</a>
                    <a href="/Register" class="btn btn-light text-dark btn-custom">Register</a>
                }
            </div>
        </div>
    </nav>

    <div style="padding-top: 100px; min-height: 100vh;">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.2/mdb.umd.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>