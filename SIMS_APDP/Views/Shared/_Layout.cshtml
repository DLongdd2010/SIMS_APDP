<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] • SIMS </title>
    <link rel="icon" href="~/favicon.ico" />

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.2/mdb.min.css" rel="stylesheet">

    <style>
        :root {
            --primary: #00b894; /* Xanh lá đậm */
            --primary-light: #55efc4;
            --primary-dark: #00a085;
            --secondary: #74b9ff;
            --bg-gradient: linear-gradient(135deg, #00b894, #00cec9);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: var(--bg-gradient);
            min-height: 100vh;
            margin: 0;
        }

        .navbar-custom {
            background: rgba(0, 184, 148, 0.95) !important;
            backdrop-filter: blur(10px);
            box-shadow: 0 4px 20px rgba(0,0,0,0.2);
        }

            .navbar-custom .navbar-brand {
                font-weight: 800;
                font-size: 1.8rem;
                color: white !important;
            }

        .btn-primary-custom {
            background: linear-gradient(45deg, #00b894, #00cec9);
            border: none;
            border-radius: 50px;
            padding: 10px 30px;
            font-weight: 600;
        }

            .btn-primary-custom:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 25px rgba(0,184,148,0.4);
            }
    </style>
</head>
<body>

    <!-- Navbar xanh lá đẹp -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom shadow-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">SIMS</a>
            <div class="ms-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="text-white me-3">Xin chào, @User.Identity.Name</span>
                    <a href="/Account/Logout" class="btn btn-outline-light btn-sm">Đăng xuất</a>
                }
                else
                {
                    <a href="/Login" class="btn btn-outline-light me-2">Đăng nhập</a>
                    <a href="/Register" class="btn btn-light text-dark">Đăng ký</a>
                }
            </div>
        </div>
    </nav>

    <div style="padding-top: 90px; min-height: 100vh; display: flex; align-items: center; justify-content: center;">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.2/mdb.umd.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>