@{
    ViewData["Title"] = "Grades";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var grades = ViewBag.Grades as IEnumerable<dynamic> ?? new List<dynamic>();
    var gpa = ViewBag.GPA ?? 0m;
    var totalCredits = ViewBag.TotalCredits ?? 0;
    var passedCredits = ViewBag.PassedCredits ?? 0;
}

<div class="container py-5">
    <div class="row g-4">
        <!-- Card GPA -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-lg text-white" style="background: linear-gradient(135deg, #00b894, #00cec9);">
                <div class="card-body text-center py-5">
                    <h4 class="mb-4">GRADE POINT AVERAGE (GPA)</h4>
                    <h1 class="display-3 fw-bold">@gpa.ToString("0.##")</h1>
                    <p class="fs-5 mt-3">Credits Passed: @passedCredits / @totalCredits</p>
                </div>
            </div>
        </div>

        <!-- Bảng điểm -->
        <div class="col-lg-8">
            <h2 class="text-success mb-4 text-center">DETAILED GRADES</h2>

            @if (!grades.Any())
            {
                <div class="alert alert-warning text-center p-4">
                    <i class="fas fa-info-circle"></i> No grades available for this semester.
                </div>
            }
            else
            {
                <div class="table-responsive shadow rounded">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-success text-white" style="background: #00b894;">
                            <tr>
                                <th>Subject</th>
                                <th>Credits</th>
                                <th>Semester</th>
                                <th>Grade</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var g in grades)
                            {
                                // ÁP DỤNG STATE PATTERN
                                var courseState = new SIMS_APDP.DesignPatternMinh.State.CourseStateContext(g.Grade);

                                <tr>
                                    <td class="fw-bold">@g.CourseName</td>
                                    <td>@g.Credits</td>
                                    <td>@g.Semester</td>
                                    <td class="fw-bold fs-5">@(g.Grade?.ToString("0.0") ?? "N/A")</td>
                                    <td>
                                        <span class="badge @courseState.Badge fs-6 px-3 py-2">
                                            @courseState.Status
                                        </span>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>