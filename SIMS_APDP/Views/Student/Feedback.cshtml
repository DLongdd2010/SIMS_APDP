@{
    ViewData["Title"] = ViewBag.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white text-center py-4">
                    <h4>Send Feedback to Instructor</h4>
                </div>
                <div class="card-body p-5">
                    <form method="post">
                        <div class="mb-4">
                            <label class="form-label">Select Course (Optional)</label>
                            <select name="CourseId" class="form-select form-select-lg" asp-items="ViewBag.Courses">
                                <option value="">General Feedback</option>
                            </select>
                            <small class="text-muted">Only graded courses are available.</small>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Feedback Content <span class="text-danger">*</span></label>
                            <textarea name="Message" class="form-control" rows="6" placeholder="Enter your suggestions, questions, or concerns..." required minlength="10"></textarea>
                        </div>

                        <button type="submit" class="btn btn-success btn-lg w-100">
                            Submit Feedback
                        </button>
                    </form>
                </div>
            </div>

            @if (ViewBag.History != null && ViewBag.History.Count > 0)
            {
                <h5 class="mt-5 mb-3">Feedback History</h5>
                foreach (var h in ViewBag.History)
                {
                    <div class="border rounded p-3 mb-3 bg-light">
                        <small class="text-muted">@h.CreatedAt.ToString("dd/MM/yyyy HH:mm") — @h.CourseName</small>
                        <p class="mb-0 mt-1">@h.Message</p>
                    </div>
                }
            }
        </div>
    </div>
</div>