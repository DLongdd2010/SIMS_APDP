@{
    ViewData["Title"] = "Sinh viên - Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row row-cols-1 row-cols-md-3 g-4">
    <div class="col">
        <div class="card h-100 text-white bg-primary shadow-lg">
            <div class="card-body text-center">
                <i class="fas fa-calendar-alt fa-3x mb-3"></i>
                <h5 class="card-title">Thời khóa biểu</h5>
                <p class="card-text">Xem lịch học chi tiết theo tuần</p>
                <a href="/Student/Timetable" class="btn btn-light">Xem ngay</a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100 text-white bg-success shadow-lg">
            <div class="card-body text-center">
                <i class="fas fa-clipboard-list fa-3x mb-3"></i>
                <h5 class="card-title">Điểm số</h5>
                <p class="card-text">Kết quả học tập tất cả môn</p>
                <a href="/Student/Grades" class="btn btn-light">Xem điểm</a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100 text-white bg-warning shadow-lg">
            <div class="card-body text-center">
                <i class="fas fa-comment-dots fa-3x mb-3"></i>
                <h5 class="card-title">Phản hồi giảng viên</h5>
                <p class="card-text">Gửi góp ý cho thầy cô</p>
                <a href="/Student/Feedback" class="btn btn-light">Gửi phản hồi</a>
            </div>
        </div>
    </div>
</div>