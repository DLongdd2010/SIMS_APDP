@{
    ViewData["Title"] = "Timetable";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var timetables = ViewBag.Timetables as IEnumerable<dynamic> ?? new List<dynamic>();
}

<div class="container py-5">
    <h2 class="text-center text-success mb-5 fw-bold">
        Semester Timetable - @ViewBag.CurrentSemester
    </h2>

    @if (!timetables.Any())
    {
        <div class="alert alert-info text-center p-5">
            <i class="fas fa-calendar-times fa-3x mb-3"></i><br>
            No classes scheduled for this semester.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-lg rounded overflow-hidden">
            <table class="table table-hover table-bordered text-center mb-0">
                <thead class="bg-success text-white">
                    <tr>
                        <th style="width: 15%">Day</th>
                        <th style="width: 35%">Subject</th>
                        <th style="width: 25%">Time</th>
                        <th style="width: 25%">Room</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in timetables)
                    {
                        <tr>
                            <td class="fw-bold text-primary">@t.DayOfWeek</td>
                            <td class="fw-bold">
                                @t.CourseName
                            </td>
                            <td>@t.StartTime.ToString(@"hh\:mm") - @t.EndTime.ToString(@"hh\:mm")</td>
                            <td>
                                @if (string.IsNullOrEmpty(t.RoomName) || t.RoomName.ToString().Contains("??") || t.RoomName.ToString().Contains("Kh?ng"))
                                {
                                    <span class="text-muted fst-italic">Undefined</span>
                                }
                                else
                                {
                                    @t.RoomName
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>