@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <!-- DÙNG CHUNG LAYOUT VỚI NAVBAR -->
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">
            <div class="card shadow-lg border-0" style="border-radius: 25px; backdrop-filter: blur(16px); background: rgba(255,255,255,0.22); border: 1px solid rgba(255,255,255,0.3);">
                <div class="card-body p-5">
                    <div class="text-center mb-5">
                        <h1 class="text-white fw-bold mb-3" style="font-size: 3.2rem; text-shadow: 0 4px 15px rgba(0,0,0,0.4);">SIMS</h1>
                        <p class="text-white fs-5 opacity-90">Hệ thống quản lý sinh viên hiện đại</p>
                    </div>

                    <div class="row align-items-center">
                        <!-- Hình minh họa bên trái (chỉ hiển thị trên màn hình lớn) -->
                        <div class="col-md-6 d-none d-md-block text-center">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                                 class="img-fluid" style="max-height: 400px;" alt="Login illustration">
                        </div>

                        <!-- Form đăng nhập bên phải -->
                        <div class="col-md-6">
                            <h3 class="text-white fw-bold text-center mb-5">Chào mừng quay lại!</h3>

                            <form asp-action="Login" asp-controller="Account" method="post">
                                <!-- Email -->
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <input type="email" name="Email" id="email" class="form-control form-control-lg bg-transparent text-white border-0 border-bottom border-white"
                                           required autocomplete="email" autofocus />
                                    <label class="form-label text-white" for="email">Email của bạn</label>
                                </div>

                                <!-- Password -->
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <input type="password" name="Password" id="password" class="form-control form-control-lg bg-transparent text-white border-0 border-bottom border-white"
                                           required autocomplete="current-password" />
                                    <label class="form-label text-white" for="password">Mật khẩu</label>
                                </div>

                                <!-- Remember me & Quên mật khẩu -->
                                <div class="d-flex justify-content-between align-items-center mb-4 text-white">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="RememberMe" id="remember" />
                                        <label class="form-check-label" for="remember">Ghi nhớ đăng nhập</label>
                                    </div>
                                    <a href="#!" class="text-white small text-decoration-underline hover-opacity">Quên mật khẩu?</a>
                                </div>

                                <!-- Nút Đăng nhập -->
                                <div class="text-center">
                                    <button type="submit" class="btn btn-lg w-100 text-white fw-bold mb-4"
                                            style="background: linear-gradient(45deg, #4facfe, #00f2fe); border-radius: 50px; padding: 14px 20px; box-shadow: 0 8px 25px rgba(0,0,0,0.3); transition: all 0.4s;">
                                        <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập ngay
                                    </button>
                                </div>

                                <!-- Đăng ký -->
                                <div class="text-center">
                                    <p class="text-white mb-0">
                                        Chưa có tài khoản?
                                        <a href="/Register" class="text-warning fw-bold text-decoration-underline">
                                            Đăng ký miễn phí
                                        </a>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Footer nhỏ xinh -->
                <div class="card-footer bg-transparent border-0 text-center py-4">
                    <p class="text-white-50 small mb-0">
                        © 2025 SIMS APDP • Phát triển với <i class="fas fa-heart text-danger"></i> tại Việt Nam
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll('.form-outline').forEach(form => new mdb.Input(form).init());
        });
    </script>
}