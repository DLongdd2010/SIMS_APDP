@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow-lg border-0" style="border-radius:20px;background:rgba(255,255,255,0.95);">
                <div class="card-body p-5">
                    <div class="text-center mb-5">
                        <h1 class="text-success fw-bold" style="font-size:3.5rem;">SIMS</h1>
                        <p class="text-muted fs-5">Chào mừng quay lại hệ thống</p>
                        <div class="badge bg-success text-white fs-6">Đăng nhập để tiếp tục</div>
                    </div>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show mb-4">
                            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
                            <button type="button" class="btn-close" data-mdb-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show mb-4">
                            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-mdb-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Login" asp-controller="Account" method="post">
                        <div class="row g-3 justify-content-center">

                            <div class="col-12 col-md-8">
                                <div data-mdb-input-init class="form-outline">
                                    <input type="text" name="UsernameOrEmail" class="form-control form-control-lg" required autofocus />
                                    <label class="form-label">Tên đăng nhập hoặc Email</label>
                                </div>
                            </div>

                            <div class="col-12 col-md-8">
                                <div data-mdb-input-init class="form-outline">
                                    <input type="password" name="Password" class="form-control form-control-lg" required />
                                    <label class="form-label">Mật khẩu</label>
                                </div>
                            </div>

                            <div class="col-12 col-md-8">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="RememberMe" id="remember" />
                                        <label class="form-check-label" for="remember">Ghi nhớ đăng nhập</label>
                                    </div>
                                    <a href="#!" class="text-success small text-decoration-underline">Quên mật khẩu?</a>
                                </div>
                            </div>

                            <div class="col-12 col-md-8 text-center mt-4">
                                <button type="submit" class="btn btn-success text-white btn-lg px-5"
                                        style="border-radius:50px;font-weight:600;">
                                    Đăng nhập ngay
                                </button>
                            </div>

                            <div class="col-12 text-center mt-3">
                                <p class="text-muted">
                                    Chưa có tài khoản?
                                    <a href="@Url.Action("Index", "Register")" class="text-success fw-bold text-decoration-underline">
                                        Đăng ký miễn phí
                                    </a>
                                </p>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="card-footer bg-transparent border-0 text-center py-4">
                    <p class="text-muted small mb-0">
                        © 2025 SIMS • Phát triển với <i class="fas fa-heart text-danger"></i> tại Việt Nam
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelectorAll('.form-outline').forEach(f => new mdb.Input(f).init());
    </script>
}