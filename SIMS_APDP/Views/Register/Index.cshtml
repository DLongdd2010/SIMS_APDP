@{
    ViewData["Title"] = "Student Account Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SIMS_APDP.Models.User

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow-lg border-0" style="border-radius:20px;background:rgba(255,255,255,0.95);">
                <div class="card-body p-5">

                    <!-- Header -->
                    <div class="text-center mb-5">
                        <h1 class="text-success fw-bold" style="font-size:3.5rem;">SIMS</h1>
                        <p class="text-muted fs-5">
                            Register Account <strong class="text-success">Student</strong>
                        </p>
                        <div class="badge bg-success text-white fs-6">
                            Free • For Students Only
                        </div>
                    </div>

                    <!-- Success -->
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show mb-4">
                            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-mdb-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Errors -->
                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Please correct the errors below and try again.
                            <button type="button" class="btn-close" data-mdb-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Form -->
                    <form asp-action="Index" asp-controller="Register" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row g-3">

                            <div class="col-md-6">
                                <div data-mdb-input-init class="form-outline">
                                    <input asp-for="Username" class="form-control form-control-lg" required />
                                    <label asp-for="Username" class="form-label">Username</label>
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div data-mdb-input-init class="form-outline">
                                    <input asp-for="FullName" class="form-control form-control-lg" required />
                                    <label asp-for="FullName" class="form-label">Full Name</label>
                                </div>
                            </div>

                            <div class="col-12">
                                <div data-mdb-input-init class="form-outline">
                                    <input asp-for="Email" class="form-control form-control-lg" required />
                                    <label asp-for="Email" class="form-label">Student Email</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div data-mdb-input-init class="form-outline">
                                    <input asp-for="Address" class="form-control form-control-lg" required />
                                    <label asp-for="Address" class="form-label">Address</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div data-mdb-input-init class="form-outline">
                                    <input asp-for="PhoneNumber" class="form-control form-control-lg" />
                                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div data-mdb-input-init class="form-outline">
                                    <input asp-for="DateOfBirth" type="date" class="form-control form-control-lg" required />
                                    <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                                </div>
                            </div>

                            <div class="col-12">
                                <label class="form-label text-success fw-bold">Gender</label>
                                <div class="d-flex gap-4 justify-content-center">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" asp-for="Gender" value="Male" checked />
                                        <label class="form-check-label">Male</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" asp-for="Gender" value="Female" />
                                        <label class="form-check-label">Female</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" asp-for="Gender" value="Other" />
                                        <label class="form-check-label">Other</label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div data-mdb-input-init class="form-outline">
                                    <input asp-for="Password" type="password" class="form-control form-control-lg" required minlength="6" />
                                    <label asp-for="Password" class="form-label">Password (min 6 characters)</label>
                                </div>
                            </div>

                            <div class="col-12 text-center mt-4">
                                <button type="submit"
                                        class="btn btn-success text-white btn-lg px-5"
                                        style="border-radius:50px;font-weight:600;">
                                    Register as Student
                                </button>
                            </div>

                            <div class="col-12 text-center mt-3">
                                <p class="text-muted">
                                    Already have an account?
                                    <a href="@Url.Action("Index", "Login")"
                                       class="text-success fw-bold text-decoration-underline">
                                        Login Now
                                    </a>
                                </p>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelectorAll('.form-outline')
            .forEach(f => new mdb.Input(f).init());
    </script>
}
