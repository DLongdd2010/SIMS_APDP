@{
    ViewData["Title"] = "Thông tin cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SIMS_APDP.Models.User

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow-lg border-0" style="border-radius:20px;background:rgba(255,255,255,0.98);">
                <div class="card-header bg-success text-white text-center">
                    <h3 class="mb-0">
                        <i class="fas fa-user-circle fa-2x me-3"></i>
                        Thông tin cá nhân - @User.Identity.Name
                    </h3>
                </div>

                <div class="card-body p-5">

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show text-center">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show text-center">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- PHẦN 1: THÔNG TIN CÁ NHÂN – CHỈ XEM -->
                    <div class="bg-light p-4 rounded mb-5">
                        <h4 class="text-success fw-bold mb-4"><i class="fas fa-info-circle me-2"></i>Thông tin tài khoản</h4>
                        <div class="row g-3">
                            <div class="col-md-6"><strong>Họ và tên:</strong> @Model.FullName</div>
                            <div class="col-md-6"><strong>Email:</strong> @Model.Email</div>
                            <div class="col-md-6"><strong>Địa chỉ:</strong> @Model.Address</div>
                            <div class="col-md-6"><strong>Số điện thoại:</strong> @(Model.PhoneNumber ?? "Chưa cập nhật")</div>
                            <div class="col-md-6"><strong>Ngày sinh:</strong> @Model.DateOfBirth.ToString("dd/MM/yyyy")</div>
                            <div class="col-md-6"><strong>Giới tính:</strong> @(Model.Gender ?? "Chưa cập nhật")</div>
                            <div class="col-12"><strong>Vai trò:</strong> <span class="badge bg-success">@(Model.Role?.RoleName ?? "Sinh viên")</span></div>
                        </div>
                    </div>

                    <!-- PHẦN 2: ĐỔI MẬT KHẨU – CÓ THỂ NHẬP -->
                    <div class="bg-white p-4 rounded border">
                        <h4 class="text-warning fw-bold mb-4"><i class="fas fa-key me-2"></i>Đổi mật khẩu</h4>
                        <form asp-action="ChangePassword" method="post">
                            <div class="row g-4">
                                <div class="col-12">
                                    <label class="form-label text-dark fw-bold">Mật khẩu cũ</label>
                                    <input type="password" name="OldPassword" class="form-control form-control-lg" required />
                                </div>
                                <div class="col-12">
                                    <label class="form-label text-dark fw-bold">Mật khẩu mới</label>
                                    <input type="password" name="NewPassword" class="form-control form-control-lg" required minlength="6" />
                                    <small class="text-muted">Tối thiểu 6 ký tự</small>
                                </div>
                                <div class="col-12">
                                    <label class="form-label text-dark fw-bold">Xác nhận mật khẩu mới</label>
                                    <input type="password" name="ConfirmPassword" class="form-control form-control-lg" required />
                                </div>
                                <div class="col-12 text-center mt-3">
                                    <button type="submit" class="btn btn-warning text-dark btn-lg px-5" style="border-radius:50px;">
                                        <i class="fas fa-save me-2"></i>Đổi mật khẩu
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>