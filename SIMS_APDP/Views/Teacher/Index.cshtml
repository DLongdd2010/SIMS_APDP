@{
    ViewData["Title"] = "Home_Teacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <!-- Header chào mừng -->
    <div class="text-center mb-5">
        <h1 class="display-4 text-secondary fw-bold">Cổng thông tin Giảng viên</h1>
        <p class="lead">Quản lý lớp học, điểm số, lịch giảng dạy và phản hồi</p>
    </div>

    <!-- Các card chức năng -->
    <!-- Các card chức năng -->
    <div class="row g-4 justify-content-center">
        <!-- Card 1: Danh sách lớp -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 text-white bg-primary shadow-lg border-0">
                <div class="card-body text-center d-flex flex-column justify-content-between">
                    <div>
                        <i class="fas fa-users fa-3x mb-3"></i>
                        <h5 class="card-title fw-bold">Danh sách lớp</h5>
                        <p class="card-text">Xem danh sách các lớp đang giảng dạy</p>
                    </div>
                    <a href="/Teacher/Classes" class="btn btn-light mt-3">Xem ngay</a>
                </div>
            </div>
        </div>

        <!-- Card 2: Lịch giảng dạy -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 text-white bg-info shadow-lg border-0">
                <div class="card-body text-center d-flex flex-column justify-content-between">
                    <div>
                        <i class="fas fa-calendar-alt fa-3x mb-3"></i>
                        <h5 class="card-title fw-bold">Lịch giảng dạy</h5>
                        <p class="card-text">Xem thời khóa biểu giảng dạy chi tiết</p>
                    </div>
                    <a href="/Teacher/Timetable" class="btn btn-light mt-3">Xem lịch</a>
                </div>
            </div>
        </div>

        <!-- Card 3: Xem phản hồi -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 text-white bg-warning shadow-lg border-0">
                <div class="card-body text-center d-flex flex-column justify-content-between">
                    <div>
                        <i class="fas fa-comment-dots fa-3x mb-3"></i>
                        <h5 class="card-title fw-bold">Phản hồi</h5>
                        <p class="card-text">Xem các phản hồi từ sinh viên</p>
                    </div>
                    <a href="/Teacher/Feedback" class="btn btn-light mt-3">Xem ngay</a>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
</div>