@{
    ViewData["Title"] = "Home_Teacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <!-- Welcome Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 text-secondary fw-bold">Teacher Portal</h1>
        <p class="lead">Manage classes, grades, teaching schedule, and student feedback</p>
    </div>

    <!-- Feature Cards -->
    <div class="row g-4 justify-content-center">

        <!-- Card 1: Class List -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 text-white bg-primary shadow-lg border-0">
                <div class="card-body text-center d-flex flex-column justify-content-between">
                    <div>
                        <i class="fas fa-users fa-3x mb-3"></i>
                        <h5 class="card-title fw-bold">Class List</h5>
                        <p class="card-text">View all classes you are teaching</p>
                    </div>
                    <a href="/Teacher/Classes" class="btn btn-light mt-3">View Now</a>
                </div>
            </div>
        </div>

        <!-- Card 2: Teaching Schedule -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 text-white bg-info shadow-lg border-0">
                <div class="card-body text-center d-flex flex-column justify-content-between">
                    <div>
                        <i class="fas fa-calendar-alt fa-3x mb-3"></i>
                        <h5 class="card-title fw-bold">Teaching Schedule</h5>
                        <p class="card-text">View your detailed teaching timetable</p>
                    </div>
                    <a href="/Teacher/Timetable" class="btn btn-light mt-3">View Schedule</a>
                </div>
            </div>
        </div>

        <!-- Card 3: Feedback -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 text-white bg-warning shadow-lg border-0">
                <div class="card-body text-center d-flex flex-column justify-content-between">
                    <div>
                        <i class="fas fa-comment-dots fa-3x mb-3"></i>
                        <h5 class="card-title fw-bold">Feedback</h5>
                        <p class="card-text">View feedback submitted by students</p>
                    </div>
                    <a href="/Teacher/Feedback" class="btn btn-light mt-3">View Now</a>
                </div>
            </div>
        </div>

    </div>
</div>
