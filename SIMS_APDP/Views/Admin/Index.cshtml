@{
    ViewData["Title"] = "Quản trị viên";
}

<div class="text-center py-10">
    <h1 class="text-4xl font-bold text-error mb-8">Trang Quản trị hệ thống</h1>

    <div class="alert alert-info shadow-lg max-w-2xl mx-auto">
        <div>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current flex-shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            <span>Chào mừng Admin! Bạn có toàn quyền quản lý hệ thống.</span>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-10">
        <a href="/Admin/Users" class="card bg-error text-white shadow-xl">
            <div class="card-body">
                <h2 class="card-title text-2xl">Quản lý người dùng</h2>
                <p>Thêm, sửa, xóa tài khoản</p>
            </div>
        </a>
        <a href="/Admin/Courses" class="card bg-warning text-white shadow-xl">
            <div class="card-body">
                <h2 class="card-title text-2xl">Quản lý môn học</h2>
                <p>Tạo môn mới, phân công GV</p>
            </div>
        </a>
        <a href="/Admin/Rooms" class="card bg-success text-white shadow-xl">
            <div class="card-body">
                <h2 class="card-title text-2xl">Quản lý phòng học</h2>
                <p>Thêm/sửa phòng học</p>
            </div>
        </a>
    </div>
</div>