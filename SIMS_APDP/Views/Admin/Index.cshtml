@{
    ViewData["Title"] = "Home_Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 text-danger fw-bold">Trang Quản trị hệ thống</h1>
        <div class="alert alert-info shadow-lg mx-auto mt-3" role="alert" style="max-width: 600px;">
            <i class="fas fa-info-circle me-2"></i>
            Chào mừng Admin! Bạn có toàn quyền quản lý hệ thống.
        </div>
    </div>

    <!-- Grid card chức năng -->
    <div class="row g-4 justify-content-center mt-4">
        <!-- Card 1: Quản lý người dùng -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 text-white bg-danger shadow-lg border-0">
                <div class="card-body text-center d-flex flex-column justify-content-between">
                    <div>
                        <i class="fas fa-users fa-3x mb-3"></i>
                        <h5 class="card-title fw-bold">Quản lý người dùng</h5>
                        <p class="card-text">Thêm, sửa, xóa tài khoản</p>
                    </div>
                    <a href="/Admin/Users" class="btn btn-light mt-3">Xem ngay</a>
                </div>
            </div>
        </div>

        <!-- Card 2: Quản lý môn học -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 text-white bg-warning shadow-lg border-0">
                <div class="card-body text-center d-flex flex-column justify-content-between">
                    <div>
                        <i class="fas fa-book fa-3x mb-3"></i>
                        <h5 class="card-title fw-bold">Quản lý môn học</h5>
                        <p class="card-text">Tạo môn mới, phân công giảng viên</p>
                    </div>
                    <a href="/Admin/Courses" class="btn btn-light mt-3">Xem ngay</a>
                </div>
            </div>
        </div>

        <!-- Card 3: Quản lý phòng học -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 text-white bg-success shadow-lg border-0">
                <div class="card-body text-center d-flex flex-column justify-content-between">
                    <div>
                        <i class="fas fa-chalkboard fa-3x mb-3"></i>
                        <h5 class="card-title fw-bold">Quản lý phòng học</h5>
                        <p class="card-text">Thêm/sửa phòng học</p>
                    </div>
                    <a href="/Admin/Rooms" class="btn btn-light mt-3">Xem ngay</a>
                </div>
            </div>
        </div>
    </div>
</div>