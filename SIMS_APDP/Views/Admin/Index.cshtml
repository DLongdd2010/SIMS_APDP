@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 text-danger fw-bold">Admin Dashboard</h1>
        <div class="alert alert-info shadow-lg mx-auto mt-3" role="alert" style="max-width: 600px;">
            <i class="fas fa-info-circle me-2"></i>
            Welcome Admin! You have full system management permissions.
        </div>
    </div>

    <!-- Grid card functions -->
    <div class="row g-4 justify-content-center mt-4">
        <!-- Card 1: User Management -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 text-white bg-danger shadow-lg border-0">
                <div class="card-body text-center d-flex flex-column justify-content-between">
                    <div>
                        <i class="fas fa-users fa-3x mb-3"></i>
                        <h5 class="card-title fw-bold">User Management</h5>
                        <p class="card-text">Add, edit, delete accounts</p>
                    </div>
                    <a href="/Admin/UserManager" class="btn btn-light mt-3">View Now</a>
                </div>
            </div>
        </div>

        <!-- Card 2: Course Management -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 text-white bg-warning shadow-lg border-0">
                <div class="card-body text-center d-flex flex-column justify-content-between">
                    <div>
                        <i class="fas fa-book fa-3x mb-3"></i>
                        <h5 class="card-title fw-bold">Course Management</h5>
                        <p class="card-text">Create courses, assign instructors</p>
                    </div>
                    <a href="/Admin/CourseManager" class="btn btn-light mt-3">View Now</a>
                </div>
            </div>
        </div>

        <!-- Card 3: Timetable Management -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 text-white bg-success shadow-lg border-0">
                <div class="card-body text-center d-flex flex-column justify-content-between">
                    <div>
                        <i class="fas fa-chalkboard fa-3x mb-3"></i>
                        <h5 class="card-title fw-bold">Timetable Manager</h5>
                        <p class="card-text">Add/edit class schedules</p>
                    </div>
                    <a href="/Admin/TimeTable" class="btn btn-light mt-3">View Now</a>
                </div>
            </div>
        </div>

        <!-- Card 4: Student Course Management -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 text-white bg-info shadow-lg border-0">
                <div class="card-body text-center d-flex flex-column justify-content-between">
                    <div>
                        <i class="fas fa-user-graduate fa-3x mb-3"></i>
                        <h5 class="card-title fw-bold">Student Course Management</h5>
                        <p class="card-text">Enroll/remove students from courses</p>
                    </div>
                    <a href="/Admin/StudentCourseManager" class="btn btn-light mt-3">View Now</a>
                </div>
            </div>
        </div>
    </div>
</div>