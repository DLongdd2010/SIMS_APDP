            } catch (err) {
                console.error('Update error:', err);
                notify(err.message || 'Failed to update course. Please try again.', 'error');
            }
        }

        // Delete course
        async function deleteCourse(id) {
            try {
                const res = await fetch(`/Admin/DeleteCourse?id=${id}`, {
                    method: 'DELETE'
                });
                if (!res.ok) {
                    const error = await res.json();
                    throw new Error(error.error || 'Failed to delete course');
                }
                notify('Course deleted successfully!', 'success');
                bootstrap.Modal.getInstance(els.deleteModal).hide();
                loadCourses();
            } catch (err) {
                console.error('Delete error:', err);
                notify(err.message || 'Failed to delete course. Please try again.', 'error');
            }
        }

        // Start
        document.addEventListener('DOMContentLoaded', init);
    })();
