@{
    ViewData["Title"] = "Course Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">Course Management</h1>
            <small class="text-muted">Manage all courses in the system</small>
        </div>
        <div>
            <button id="btnRefresh" class="btn btn-outline-secondary me-2" title="Refresh data">
                <i class="bi bi-arrow-clockwise"></i> Refresh
            </button>
            <button id="btnAdd" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#courseModal">
                <i class="bi bi-plus-circle"></i> Add Course
            </button>
        </div>
    </div>

    <!-- Search & Filter Card -->
    <div class="card mb-4 shadow-sm border-0">
        <div class="card-body">
            <div class="row g-2">
                <div class="col-lg-5">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-search"></i>
                        </span>
                        <input id="searchInput" type="search" class="form-control border-start-0" placeholder="Search by course name..." />
                    </div>
                </div>
                <div class="col-lg-4">
                    <select id="sortSelect" class="form-select">
                        <option value="name_asc">Sort: A → Z</option>
                        <option value="name_desc">Sort: Z → A</option>
                        <option value="credits_asc">Sort: Credits ↑</option>
                        <option value="credits_desc">Sort: Credits ↓</option>
                    </select>
                </div>
                <div class="col-lg-3 text-end">
                    <small class="text-muted">Total: <strong id="totalCount">0</strong> courses</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Courses Table -->
    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width:120px;">Course Name</th>
                        <th>Description</th>
                        <th style="width:90px;">Credits</th>
                        <th style="width:150px;">Instructor</th>
                        <th style="width:150px; text-align: center;">Actions</th>
                    </tr>
                </thead>
                <tbody id="coursesTbody">
                    <tr>
                        <td colspan="5" class="text-center text-muted py-5">
                            <div class="spinner-border spinner-border-sm" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            Loading data...
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination & Page Size -->
    <div class="d-flex justify-content-between align-items-center mt-4">
        <div>
            <label class="form-label me-2 mb-0">Show</label>
            <select id="pageSize" class="form-select d-inline-block" style="width:100px">
                <option value="5">5</option>
                <option value="10" selected>10</option>
                <option value="25">25</option>
                <option value="50">50</option>
            </select>
            <span class="text-muted ms-2">courses / page</span>
        </div>
        <nav aria-label="Pagination">
            <ul id="pagination" class="pagination mb-0"></ul>
        </div>
    </div>
</div>

<!-- Add/Edit Modal -->
<div class="modal fade" id="courseModal" tabindex="-1" aria-labelledby="courseModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <form id="courseForm" class="modal-content needs-validation" novalidate>
            <div class="modal-header bg-light">
                <h5 class="modal-title" id="courseModalLabel">
                    <i class="bi bi-plus-circle"></i> Add Course
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input id="courseId" type="hidden" />
                <div class="row g-3">
                    <div class="col-md-12">
                        <label class="form-label">
                            Course Name <span class="text-danger">*</span>
                        </label>
                        <input id="name" type="text" class="form-control" required placeholder="E.g., Advanced Mathematics" />
                        <div class="invalid-feedback">Course name is required.</div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">
                            Credits <span class="text-danger">*</span>
                        </label>
                        <input id="credits" type="number" min="1" max="10" class="form-control" required value="3" />
                        <div class="invalid-feedback">Credits must be between 1 and 10.</div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Instructor</label>
                        <select id="department" class="form-select">
                            <option value="">-- Select Instructor --</option>
                        </select>
                    </div>
                    <div class="col-12">
                        <label class="form-label">Course Description</label>
                        <textarea id="notes" class="form-control" rows="3" placeholder="Enter detailed course description..."></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Students in Course Modal -->
<div class="modal fade" id="studentsModal" tabindex="-1" aria-labelledby="studentsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="modal-title" id="studentsModalLabel">
                    <i class="bi bi-people-fill"></i> Students in Course
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <div class="row g-2">
                        <div class="col-md-6">
                            <div class="alert alert-info mb-0">
                                <small><strong>Current:</strong> <span id="studentCount">0</span> / <strong>30</strong> students</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <button type="button" class="btn btn-sm btn-success float-end" id="btnAddStudent">
                                <i class="bi bi-person-plus"></i> Enroll Student
                            </button>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0 table-sm">
                        <thead class="table-light">
                            <tr>
                                <th>Student Name</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Enrolled Date</th>
                                <th style="width:80px; text-align: center;">Action</th>
                            </tr>
                        </thead>
                        <tbody id="studentsTbody">
                            <tr>
                                <td colspan="5" class="text-center text-muted py-3">
                                    <div class="spinner-border spinner-border-sm" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <nav aria-label="Student Pagination">
                    <ul id="studentsPagination" class="pagination pagination-sm mt-3 mb-0"></ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Enroll Student Modal -->
<div class="modal fade" id="enrollStudentModal" tabindex="-1" aria-labelledby="enrollStudentLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="modal-title" id="enrollStudentLabel">
                    <i class="bi bi-person-plus"></i> Enroll Student
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <input id="enrollSearch" type="search" class="form-control" placeholder="Search student by name or username..." />
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0 table-sm">
                        <thead class="table-light">
                            <tr>
                                <th>Student Name</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th style="width:80px; text-align: center;">Action</th>
                            </tr>
                        </thead>
                        <tbody id="availableStudentsTbody">
                            <tr>
                                <td colspan="4" class="text-center text-muted py-3">
                                    <div class="spinner-border spinner-border-sm" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <nav aria-label="Available Students Pagination">
                    <ul id="availableStudentsPagination" class="pagination pagination-sm mt-3 mb-0"></ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger bg-opacity-10 border-danger">
                <h5 class="modal-title text-danger" id="confirmDeleteLabel">
                    <i class="bi bi-exclamation-triangle"></i> Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this course:</p>
                <p class="fw-bold text-danger mb-0" id="deleteCourseLabel"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button id="btnDeleteConfirm" type="button" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    (function () {
        const state = {
            page: 1,
            pageSize: 10,
            total: 0,
            search: '',
            sort: 'name_asc',
            editingId: null,
            lastDeletedId: null,
            selectedCourseId: null,
            selectedCourseName: null,
            studentPage: 1,
            studentPageSize: 10,
            availableStudentPage: 1,
            availableStudentPageSize: 10
        };

        const els = {
            tbody: document.getElementById('coursesTbody'),
            search: document.getElementById('searchInput'),
            sortSelect: document.getElementById('sortSelect'),
            pageSize: document.getElementById('pageSize'),
            pagination: document.getElementById('pagination'),
            totalCount: document.getElementById('totalCount'),
            btnRefresh: document.getElementById('btnRefresh'),
            btnAdd: document.getElementById('btnAdd'),
            courseModal: document.getElementById('courseModal'),
            courseForm: document.getElementById('courseForm'),
            courseModalLabel: document.getElementById('courseModalLabel'),
            courseId: document.getElementById('courseId'),
            name: document.getElementById('name'),
            credits: document.getElementById('credits'),
            department: document.getElementById('department'),
            notes: document.getElementById('notes'),
            deleteModal: document.getElementById('confirmDeleteModal'),
            deleteLabel: document.getElementById('deleteCourseLabel'),
            btnDeleteConfirm: document.getElementById('btnDeleteConfirm'),
            studentsModal: document.getElementById('studentsModal'),
            studentsModalLabel: document.getElementById('studentsModalLabel'),
            studentsTbody: document.getElementById('studentsTbody'),
            studentsPagination: document.getElementById('studentsPagination'),
            studentCount: document.getElementById('studentCount'),
            btnAddStudent: document.getElementById('btnAddStudent'),
            enrollStudentModal: document.getElementById('enrollStudentModal'),
            enrollSearch: document.getElementById('enrollSearch'),
            availableStudentsTbody: document.getElementById('availableStudentsTbody'),
            availableStudentsPagination: document.getElementById('availableStudentsPagination')
        };

        // Escape HTML to prevent XSS
        function escapeHtml(text) {
            if (!text && text !== 0) return '';
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Render table row with Students button
        function renderRow(course) {
            return `
                <tr data-id="${course.id}">
                    <td>
                        <strong>${escapeHtml(course.name)}</strong>
                        <br/>
                        <small class="text-muted">${escapeHtml(course.code)}</small>
                    </td>
                    <td><small>${escapeHtml(course.notes || '')}</small></td>
                    <td><span class="badge bg-info">${course.credits}</span></td>
                    <td><small>${escapeHtml(course.departmentName || 'N/A')}</small></td>
                    <td class="text-center">
                        <div class="btn-group btn-group-sm" role="group">
                            <button class="btn btn-outline-info btn-students" title="View Students">
                                <i class="bi bi-people-fill"></i>
                            </button>
                            <button class="btn btn-outline-primary btn-edit" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button class="btn btn-outline-danger btn-delete" title="Delete">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            `;
        }

        // Initialize
        function init() {
            bindEvents();
            loadDepartments();
            loadCourses();
        }

        // Bind all events
        function bindEvents() {
            let searchTimer;
            els.search.addEventListener('input', () => {
                clearTimeout(searchTimer);
                searchTimer = setTimeout(() => {
                    state.search = els.search.value.trim();
                    state.page = 1;
                    loadCourses();
                }, 400);
            });

            els.sortSelect.addEventListener('change', () => {
                state.sort = els.sortSelect.value;
                state.page = 1;
                loadCourses();
            });

            els.pageSize.addEventListener('change', () => {
                state.pageSize = parseInt(els.pageSize.value, 10);
                state.page = 1;
                loadCourses();
            });

            els.btnRefresh.addEventListener('click', () => {
                state.page = 1;
                els.search.value = '';
                state.search = '';
                els.sortSelect.value = 'name_asc';
                state.sort = 'name_asc';
                loadDepartments();
                loadCourses();
            });

            els.btnAdd.addEventListener('click', () => {
                openAdd();
            });

            els.courseForm.addEventListener('submit', async (ev) => {
                ev.preventDefault();
                if (!els.courseForm.checkValidity()) {
                    els.courseForm.classList.add('was-validated');
                    return;
                }
                const payload = {
                    name: els.name.value.trim(),
                    credits: parseInt(els.credits.value, 10) || 3,
                    departmentId: els.department.value || null,
                    notes: els.notes.value.trim()
                };

                if (state.editingId) {
                    await saveUpdate(state.editingId, payload);
                } else {
                    await saveCreate(payload);
                }
            });

            els.btnDeleteConfirm.addEventListener('click', async () => {
                const id = state.lastDeletedId;
                if (id) {
                    await deleteCourse(id);
                }
            });

            els.courseModal.addEventListener('hidden.bs.modal', () => {
                resetForm();
            });

            els.btnAddStudent.addEventListener('click', () => {
                state.availableStudentPage = 1;
                loadAvailableStudents();
                bootstrap.Modal.getOrCreateInstance(els.enrollStudentModal).show();
            });

            let enrollSearchTimer;
            els.enrollSearch.addEventListener('input', () => {
                clearTimeout(enrollSearchTimer);
                enrollSearchTimer = setTimeout(() => {
                    state.availableStudentPage = 1;
                    loadAvailableStudents();
                }, 300);
            });

            els.availableStudentsPagination.addEventListener('click', (e) => {
                e.preventDefault();
                const btn = e.target.closest('a');
                if (!btn || btn.closest('li').classList.contains('disabled')) return;
                const pageText = btn.textContent.trim();
                if (pageText === '‹ Previous') {
                    if (state.availableStudentPage > 1) state.availableStudentPage--;
                } else if (pageText === 'Next ›') {
                    state.availableStudentPage++;
                } else if (pageText !== '…') {
                    state.availableStudentPage = parseInt(pageText, 10);
                }
                loadAvailableStudents();
            });

            els.studentsPagination.addEventListener('click', (e) => {
                e.preventDefault();
                const btn = e.target.closest('a');
                if (!btn || btn.closest('li').classList.contains('disabled')) return;
                const pageText = btn.textContent.trim();
                if (pageText === '‹ Previous') {
                    if (state.studentPage > 1) state.studentPage--;
                } else if (pageText === 'Next ›') {
                    state.studentPage++;
                } else if (pageText !== '…') {
                    state.studentPage = parseInt(pageText, 10);
                }
                loadStudentsInCourse();
            });

            els.studentsTbody.addEventListener('click', (e) => {
                const btn = e.target.closest('button');
                if (!btn || !btn.classList.contains('btn-remove-student')) return;
                const tr = btn.closest('tr');
                const studentId = tr.dataset.studentId;
                removeStudentFromCourse(studentId);
            });

            // Event delegation for available students table
            els.availableStudentsTbody.addEventListener('click', (e) => {
                const btn = e.target.closest('button');
                if (!btn || !btn.classList.contains('btn-enroll-student')) return;
                const tr = btn.closest('tr');
                const studentId = tr.dataset.studentId;
                if (studentId) {
                    enrollStudentInCourse(studentId);
                }
            });
        }

        // Load departments (teachers)
        async function loadDepartments() {
            try {
                const res = await fetch('/Admin/GetDepartments');
                if (!res.ok) {
                    populateDepartments([]);
                    return;
                }
                const data = await res.json();
                populateDepartments(data);
            } catch (err) {
                console.error('Error loading departments:', err);
                populateDepartments([]);
            }
        }

        function populateDepartments(list) {
            const departmentSelect = els.department;
            departmentSelect.innerHTML = '<option value="">-- Select Instructor --</option>';
            (list || []).forEach(d => {
                const opt = document.createElement('option');
                opt.value = d.id;
                opt.textContent = d.name;
                departmentSelect.appendChild(opt);
            });
        }

        // Load courses with filters
        async function loadCourses() {
            const q = new URLSearchParams({
                search: state.search || '',
                page: state.page,
                pageSize: state.pageSize,
                sort: state.sort
            });
            try {
                const res = await fetch(`/Admin/GetCourses?${q.toString()}`);
                if (!res.ok) throw new Error('Failed to fetch courses');
                const result = await res.json();
                state.total = result.total || 0;
                renderTable(result.items || []);
                renderPagination();
            } catch (err) {
                console.error('Error loading courses:', err);
                renderTable([]);
                renderPagination();
            }
        }

        function renderTable(items) {
            els.totalCount.textContent = state.total;
            if (!items || items.length === 0) {
                els.tbody.innerHTML = `
                    <tr>
                        <td colspan="5" class="text-center text-muted py-5">
                            <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                            <p class="mt-2">No course data found</p>
                        </td>
                    </tr>
                `;
                return;
            }
            const rows = items.map(renderRow).join('');
            els.tbody.innerHTML = rows;
        }

        // Render pagination
        function renderPagination() {
            const totalPages = Math.max(1, Math.ceil(state.total / state.pageSize));
            const current = Math.min(Math.max(1, state.page), totalPages);
            const pages = [];
            const delta = 1;
            const left = Math.max(1, current - delta);
            const right = Math.min(totalPages, current + delta);

            if (left > 1) pages.push(1);
            if (left > 2) pages.push('...');
            for (let i = left; i <= right; i++) pages.push(i);
            if (right < totalPages - 1) pages.push('...');
            if (right < totalPages) pages.push(totalPages);

            els.pagination.innerHTML = '';

            const addItem = (content, cls, handler) => {
                const li = document.createElement('li');
                li.className = 'page-item ' + (cls || '');
                const a = document.createElement('a');
                a.className = 'page-link';
                a.href = '#';
                a.innerHTML = content;
                a.addEventListener('click', (e) => { 
                    e.preventDefault(); 
                    handler?.();
                });
                li.appendChild(a);
                els.pagination.appendChild(li);
            };

            addItem('‹ Previous', state.page === 1 ? 'disabled' : '', 
                () => { if (state.page > 1) { state.page--; loadCourses(); } });

            pages.forEach(p => {
                if (p === '...') {
                    const li = document.createElement('li');
                    li.className = 'page-item disabled';
                    li.innerHTML = '<a class="page-link">…</a>';
                    els.pagination.appendChild(li);
                } else {
                    addItem(p, p === current ? 'active' : '', 
                        () => { state.page = p; loadCourses(); });
                }
            });

            addItem('Next ›', state.page === totalPages ? 'disabled' : '', 
                () => { if (state.page < totalPages) { state.page++; loadCourses(); } });
        }

        // Open add modal
        function openAdd() {
            state.editingId = null;
            els.courseModalLabel.innerHTML = '<i class="bi bi-plus-circle"></i> Add Course';
            resetForm();
            bootstrap.Modal.getOrCreateInstance(els.courseModal).show();
        }

        // Open edit modal
        async function openEdit(id) {
            try {
                const res = await fetch(`/Admin/GetCourse/${id}`);
                if (!res.ok) throw new Error('Not found');
                const course = await res.json();
                state.editingId = id;
                els.courseModalLabel.innerHTML = '<i class="bi bi-pencil-square"></i> Edit Course';
                els.courseId.value = course.id;
                els.name.value = course.name || '';
                els.credits.value = course.credits ?? 3;
                els.department.value = course.departmentId ?? '';
                els.notes.value = course.notes || '';
                bootstrap.Modal.getOrCreateInstance(els.courseModal).show();
            } catch (err) {
                console.error(err);
                alert('Failed to load course information.');
            }
        }

        // Open delete confirmation
        function openDeleteConfirm(id) {
            state.lastDeletedId = id;
            const tr = document.querySelector(`tr[data-id="${id}"]`);
            const label = tr ? tr.querySelector('td strong').textContent : 'Course';
            els.deleteLabel.textContent = label;
            bootstrap.Modal.getOrCreateInstance(els.deleteModal).show();
        }

        // Open students modal
        async function openStudentsModal(courseId) {
            state.selectedCourseId = parseInt(courseId, 10);
            const course = document.querySelector(`tr[data-id="${courseId}"]`)?.querySelector('td strong')?.textContent || 'Selected Course';
            state.selectedCourseName = course;

            els.studentsModalLabel.innerHTML = `<i class="bi bi-people-fill"></i> Students in "${escapeHtml(state.selectedCourseName)}"`;
            state.studentPage = 1;
            loadStudentsInCourse();
            bootstrap.Modal.getOrCreateInstance(els.studentsModal).show();
        }

        // Load students in course
        async function loadStudentsInCourse() {
            const q = new URLSearchParams({
                courseId: state.selectedCourseId,
                page: state.studentPage,
                pageSize: state.studentPageSize
            });
            try {
                const res = await fetch(`/Admin/GetStudentsInCourse?${q.toString()}`);
                if (!res.ok) throw new Error('Failed to fetch students');
                const result = await res.json();
                els.studentCount.textContent = result.currentCount || 0;
                renderStudentsTable(result.items || []);
                renderStudentPagination(result.total || 0);
            } catch (err) {
                console.error('Error loading students:', err);
                els.studentsTbody.innerHTML = `
                    <tr>
                        <td colspan="5" class="text-center text-muted py-3">
                            <i class="bi bi-inbox"></i>
                            <p class="mt-2">Error loading students</p>
                        </td>
                    </tr>
                `;
                renderStudentPagination(0);
            }
        }

        // Render students table
        function renderStudentsTable(items) {
            if (!items || items.length === 0) {
                els.studentsTbody.innerHTML = `
                    <tr>
                        <td colspan="5" class="text-center text-muted py-3">
                            No students enrolled
                        </td>
                    </tr>
                `;
                return;
            }
            const rows = items.map(student => `
                <tr data-student-id="${student.userId}" class="align-middle">
                    <td><strong>${escapeHtml(student.studentName)}</strong></td>
                    <td><small>${escapeHtml(student.username)}</small></td>
                    <td><small>${escapeHtml(student.email)}</small></td>
                    <td><small>${student.enrolledDate}</small></td>
                    <td class="text-center">
                        <button class="btn btn-sm btn-outline-danger btn-remove-student" type="button" title="Remove from course">
                            <i class="bi bi-x-circle"></i>
                        </button>
                    </td>
                </tr>
            `).join('');
            els.studentsTbody.innerHTML = rows;
        }

        // Render student pagination
        function renderStudentPagination(total) {
            const totalPages = Math.max(1, Math.ceil(total / state.studentPageSize));
            const current = Math.min(Math.max(1, state.studentPage), totalPages);
            const pages = [];
            const delta = 1;
            const left = Math.max(1, current - delta);
            const right = Math.min(totalPages, current + delta);

            if (left > 1) pages.push(1);
            if (left > 2) pages.push('...');
            for (let i = left; i <= right; i++) pages.push(i);
            if (right < totalPages - 1) pages.push('...');
            if (right < totalPages) pages.push(totalPages);

            els.studentsPagination.innerHTML = '';

            const addItem = (content, cls, handler) => {
                const li = document.createElement('li');
                li.className = 'page-item ' + (cls || '');
                const a = document.createElement('a');
                a.className = 'page-link';
                a.href = '#';
                a.innerHTML = content;
                a.addEventListener('click', (e) => { 
                    e.preventDefault(); 
                    handler?.();
                });
                li.appendChild(a);
                els.studentsPagination.appendChild(li);
            };

            addItem('‹ Previous', state.studentPage === 1 ? 'disabled' : '', 
                () => { if (state.studentPage > 1) { state.studentPage--; loadStudentsInCourse(); } });

            pages.forEach(p => {
                if (p === '...') {
                    const li = document.createElement('li');
                    li.className = 'page-item disabled';
                    li.innerHTML = '<a class="page-link">…</a>';
                    els.studentsPagination.appendChild(li);
                } else {
                    addItem(p, p === current ? 'active' : '', 
                        () => { state.studentPage = p; loadStudentsInCourse(); });
                }
            });

            addItem('Next ›', state.studentPage === totalPages ? 'disabled' : '', 
                () => { if (state.studentPage < totalPages) { state.studentPage++; loadStudentsInCourse(); } });
        }

        // Load available students for enrollment
        async function loadAvailableStudents() {
            if (!state.selectedCourseId) return;
            const search = els.enrollSearch ? els.enrollSearch.value.trim() : '';
            const q = new URLSearchParams({
                courseId: state.selectedCourseId,
                search: search,
                page: state.availableStudentPage,
                pageSize: state.availableStudentPageSize
            });
            try {
                const res = await fetch(`/Admin/GetAvailableStudentsForCourse?${q.toString()}`);
                if (!res.ok) throw new Error('Failed to fetch students');
                const result = await res.json();
                renderAvailableStudentsTable(result.items || []);
                renderAvailableStudentPagination(result.total || 0);
            } catch (err) {
                console.error('Error loading available students:', err);
                els.availableStudentsTbody.innerHTML = `
                    <tr>
                        <td colspan="4" class="text-center text-muted py-3">
                            Error loading students
                        </td>
                    </tr>
                `;
                renderAvailableStudentPagination(0);
            }
        }

        // Render available students table
        function renderAvailableStudentsTable(items) {
            if (!items || items.length === 0) {
                els.availableStudentsTbody.innerHTML = `
                    <tr>
                        <td colspan="4" class="text-center text-muted py-3">
                            No available students
                        </td>
                    </tr>
                `;
                return;
            }
            const rows = items.map(student => `
                <tr data-student-id="${student.id}" class="align-middle">
                    <td><strong>${escapeHtml(student.name)}</strong></td>
                    <td><small>${escapeHtml(student.username)}</small></td>
                    <td><small>${escapeHtml(student.email)}</small></td>
                    <td class="text-center">
                        <button class="btn btn-sm btn-outline-success btn-enroll-student" type="button" title="Enroll in course">
                            <i class="bi bi-check-circle"></i>
                        </button>
                    </td>
                </tr>
            `).join('');
            els.availableStudentsTbody.innerHTML = rows;
        }

        // Render available student pagination
        function renderAvailableStudentPagination(total) {
            const totalPages = Math.max(1, Math.ceil(total / state.availableStudentPageSize));
            const current = Math.min(Math.max(1, state.availableStudentPage), totalPages);
            const pages = [];
            const delta = 1;
            const left = Math.max(1, current - delta);
            const right = Math.min(totalPages, current + delta);

            if (left > 1) pages.push(1);
            if (left > 2) pages.push('...');
            for (let i = left; i <= right; i++) pages.push(i);
            if (right < totalPages - 1) pages.push('...');
            if (right < totalPages) pages.push(totalPages);

            els.availableStudentsPagination.innerHTML = '';

            const addItem = (content, cls, handler) => {
                const li = document.createElement('li');
                li.className = 'page-item ' + (cls || '');
                const a = document.createElement('a');
                a.className = 'page-link';
                a.href = '#';
                a.innerHTML = content;
                a.addEventListener('click', (e) => { 
                    e.preventDefault(); 
                    handler?.();
                });
                li.appendChild(a);
                els.availableStudentsPagination.appendChild(li);
            };

            addItem('‹ Previous', state.availableStudentPage === 1 ? 'disabled' : '', 
                () => { if (state.availableStudentPage > 1) { state.availableStudentPage--; loadAvailableStudents(); } });

            pages.forEach(p => {
                if (p === '...') {
                    const li = document.createElement('li');
                    li.className = 'page-item disabled';
                    li.innerHTML = '<a class="page-link">…</a>';
                    els.availableStudentsPagination.appendChild(li);
                } else {
                    addItem(p, p === current ? 'active' : '', 
                        () => { state.availableStudentPage = p; loadAvailableStudents(); });
                }
            });

            addItem('Next ›', state.availableStudentPage === totalPages ? 'disabled' : '', 
                () => { if (state.availableStudentPage < totalPages) { state.availableStudentPage++; loadAvailableStudents(); } });
        }

        // Enroll student in course
        async function enrollStudentInCourse(studentId) {
            try {
                const res = await fetch('/Admin/EnrollStudentInCourse', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        courseId: parseInt(state.selectedCourseId, 10),
                        studentId: parseInt(studentId, 10),
                        semester: ""
                    })
                });
                if (!res.ok) {
                    const error = await res.json();
                    throw new Error(error.error || 'Enrollment failed');
                }
                const result = await res.json();
                notify(result.message || 'Student enrolled successfully!', 'success');
                loadStudentsInCourse();
                loadAvailableStudents();
            } catch (err) {
                console.error('Enrollment error:', err);
                notify(err.message || 'Enrollment failed. Please try again.', 'error');
            }
        }

        // Remove student from course
        async function removeStudentFromCourse(studentId) {
            if (!confirm('Are you sure you want to remove this student from the course?')) return;
            try {
                const res = await fetch('/Admin/RemoveStudentFromCourse?courseId=' + state.selectedCourseId + '&studentId=' + studentId, {
                    method: 'DELETE'
                });
                if (!res.ok) throw new Error('Removal failed');
                notify('Student removed successfully!', 'success');
                loadStudentsInCourse();
                loadAvailableStudents();
            } catch (err) {
                console.error(err);
                notify(err.message || 'Removal failed. Please try again.', 'error');
            }
        }

        // Notify function
        function notify(message, type = 'info') {
            const bgClass = {
                success: 'text-bg-success',
                error: 'text-bg-danger',
                warning: 'text-bg-warning',
                info: 'text-bg-info'
            }[type] || 'text-bg-info';

            const icon = {
                success: 'bi-check-circle',
                error: 'bi-x-circle',
                warning: 'bi-exclamation-triangle',
                info: 'bi-info-circle'
            }[type] || 'bi-info-circle';

            const id = `notify-${Date.now()}`;
            const toast = document.createElement('div');
            toast.id = id;
            toast.className = `toast align-items-center ${bgClass} border-0 position-fixed top-0 end-0 m-3`;
            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">
                        <i class="bi ${icon}"></i> ${message}
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            `;
            document.body.appendChild(toast);
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
            toast.addEventListener('hidden.bs.toast', () => {
                toast.remove();
            });
        }

        // Reset form
        function resetForm() {
            els.courseForm.classList.remove('was-validated');
            state.editingId = null;
            els.courseId.value = '';
            els.name.value = '';
            els.credits.value = 3;
            els.department.value = '';
            els.notes.value = '';
        }

        // Save create (POST new course)
        async function saveCreate(payload) {
            try {
                const res = await fetch('/Admin/CreateCourse', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                if (!res.ok) {
                    const error = await res.json();
                    throw new Error(error.error || 'Failed to create course');
                }
                notify('Course created successfully!', 'success');
                bootstrap.Modal.getInstance(els.courseModal).hide();
                loadCourses();
            } catch (err) {
                console.error('Create error:', err);
                notify(err.message || 'Failed to create course. Please try again.', 'error');
            }
        }

